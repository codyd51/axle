[GLOBAL gdt_activate]
gdt_activate:
    ; GDT pointer is passed as the first parameter, rdi
    ; https://aaronbloomfield.github.io/pdr/book/x86-64bit-ccc-chapter.pdf
    lgdt [rdi]
    ret


[GLOBAL gdt_load_cs]
gdt_load_cs:
    push rdi
    push $.next
    retfq
.next:
    ret


[GLOBAL gdt_load_ds]
gdt_load_ds:
    mov ax, di
    mov ds, ax
    mov es, ax
    mov fs, ax
    mov gs, ax
    mov ss, ax
    ret


[GLOBAL tss_activate]
tss_activate:
	ret
