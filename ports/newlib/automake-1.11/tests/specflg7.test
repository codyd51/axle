# The true/false example from the manual, plus a check for _SHORTNAME.

required=gcc
. ./defs || Exit 1

set -e

cat >> configure.in << 'END'
AC_PROG_CC
AM_PROG_CC_C_O
AC_OUTPUT
END

cat > Makefile.am << 'END'
bin_PROGRAMS = false true
true_SOURCES = false.c
true_CFLAGS = -DAM_TRUE
true_SHORTNAME = t
# No false_SOURCES definition.  Use the default source.
false_CFLAGS = -DAM_FALSE
false_SHORTNAME = f
END

cat > false.c << 'END'
#include <stdio.h>
int
main (int argc, char *argv[])
{
#ifdef AM_TRUE
   puts ("true");
#else
   puts ("false");
#endif
   return 0;
}
END

$ACLOCAL
$AUTOCONF
$AUTOMAKE -a

./configure
$MAKE
./true | grep true
./false | grep false
test -f ./t-false.o
test -f ./f-false.o
