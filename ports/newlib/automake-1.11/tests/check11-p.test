# Check skip summary.

. ./defs-p || Exit 1

set -e

cat >> configure.in << 'END'
AC_OUTPUT
END

cat > Makefile.am << 'END'
TESTS = skip skip2
END

cat >>skip <<'END'
#! /bin/sh
exit 77
END
chmod a+x skip
cp skip skip2

$ACLOCAL
$AUTOCONF
$AUTOMAKE -a

unset TESTS || :

./configure
env TESTS=skip $MAKE -e check >stdout
cat stdout
grep '1.*passed' stdout && Exit 1

env TESTS="skip skip2" $MAKE -e check >stdout
cat stdout
grep '2.*passed' stdout && Exit 1

:
