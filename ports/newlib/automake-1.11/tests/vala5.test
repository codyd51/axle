# Test per-target flags, expected to fail.

required="libtool libtoolize pkg-config valac gcc GNUmake"
. ./defs || Exit 1

set -e

mkdir src

cat >> 'configure.in' << 'END'
AC_PROG_CC
AM_PROG_CC_C_O
AC_PROG_LIBTOOL
AM_PROG_VALAC
PKG_CHECK_MODULES([GOBJECT],[gobject-2.0 >= 2.10])
AC_CONFIG_FILES([src/Makefile])
AC_OUTPUT
END

cat > 'Makefile.am' <<'END'
SUBDIRS = src
END

cat > 'src/Makefile.am' <<'END'
bin_PROGRAMS = foo bar
foo_CFLAGS = $(GOBJECT_CFLAGS)
foo_LDADD = $(GOBJECT_LIBS)
foo_SOURCES = baz.vala
bar_SOURCES = baz.vala
bar_VALAFLAGS = -D BAR
bar_CFLAGS = $(GOBJECT_CFLAGS)
bar_LDADD = $(GOBJECT_LIBS)
END

cat > 'src/baz.vala' <<'END'
void main () {
#if BAR
  stdout.printf ("bar\n");
#else
  stdout.printf ("foo\n");
#endif
}
END

libtoolize

$ACLOCAL
$AUTOCONF
$AUTOMAKE -a

./configure
$MAKE

